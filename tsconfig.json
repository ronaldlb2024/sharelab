{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "rootDir": "src",
    "outDir": "public/js",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}